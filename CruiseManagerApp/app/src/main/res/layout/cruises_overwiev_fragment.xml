<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data class="CruisesOverviewFragmentBinding">

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/active_cruises_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cruisesOverview.cruiseOverviewFragment.CruisesOverviewFragment">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_cruise_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="60dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintEnd_toStartOf="@+id/add_cruise_hint"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/active_cruises_status_information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_active_cruises"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_cruise_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="128dp"
            android:text="@string/add_cruise_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <View
            android:id="@+id/divider"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="324dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="38dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_cruise_floating_action_button" />

        <TextView
            android:id="@+id/enter_crew_code_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="112dp"
            android:text="@string/enter_crew_code_hint_text"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/crew_code_text_input_layout"
            android:layout_width="336dp"
            android:layout_height="69dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_crew_code_hint">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/crew_code_text_input_edit_text"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:hint="Wpisz kod tutaj"
            app:layout_constraintBottom_toBottomOf="@+id/crew_code_text_input_layout"
            app:layout_constraintEnd_toEndOf="@+id/crew_code_text_input_layout"
            app:layout_constraintStart_toStartOf="@+id/crew_code_text_input_layout"
            app:layout_constraintTop_toTopOf="@+id/crew_code_text_input_layout" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/cruise_overview_menu"
            app:labelVisibilityMode="labeled"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/active_cruises_view"
            android:layout_width="371dp"
            android:layout_height="253dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/active_cruises_status_information_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>